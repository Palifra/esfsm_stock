<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add vehicle field to employee form -->
    <record id="hr_employee_view_form_stock" model="ir.ui.view">
        <field name="name">hr.employee.form.stock</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile_phone']" position="after">
                <field name="vehicle_id" string="Возило"/>
            </xpath>
        </field>
    </record>
</odoo>
